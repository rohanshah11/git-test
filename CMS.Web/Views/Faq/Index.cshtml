@model List<CMS.Core.Entity.Faq>
@{
    ViewData["Title"] = "Faq";
}

<div class="main-content">
    <section class="inner-header divider layer-overlay overlay-deep" data-bg-img="/clientside/images/default/bg5.jpg">
        <div class="container pt-0 pb-0">
            <div class="section-content">
                <div class="row">
                    <div class="col-md-12 xs-text-center">
                        <h3 class="font-28">
                            FAQ
                        </h3>
                        <ol class="breadcrumb white mt-10">
                            <li><a href="/">Home</a></li>
                            <li class="">FAQ</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="main-content">
        <section>
            <div class="container">
                <div class="row">
                    @{ foreach (var faq in Model)
                        {
                            <div class="col-md-10 col-md-push-1">
                                <div id="section-one" class="mb-50">
                                    <h3>@faq.question?</h3>
                                    <hr>
                                    <p>@faq.answer</p>
                                </div>

                            </div>
                        }
                    }
                </div>
            </div>
        </section>

    </div>
</div>
