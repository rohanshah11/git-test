@model LoginModel
@{ Layout = null; }

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Login- Hotel Annapurna Pvt.Ltd</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta content="A fully featured system which can fit into all types of School" name="description" />
    <meta content="Coderthemes" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/favicon.ico">
    <!-- App css -->
    <link href="~/adminside/css/AdminDashCss/bootstrap.min.css" rel="stylesheet" />


</head>

<body class="bg-transparent">
    <!-- HOME -->
    <section>
        <div class="container">
            <div class="card col-md-6 col-md-offset-4">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="wrapper-page">
                            <div class="m-t-40 account-pages">
                                <div class=" account-logo-box">
                                    <h2 class="text-uppercase">
                                        <span style="margin-left:10px;"><img src="~/img/images.png" alt="" height="300"></span>
                                    </h2>
                                </div>

                                @Html.Partial("message")
                                <div class="account-content" style="text-align:left;">

                                    @using (Html.BeginForm())
                                    {
                        <div class="form-group m-b-25">
                            <div class="col-12">
                                @Html.LabelFor(a => a.username)
                                @Html.TextBoxFor(a => a.username, new { @Class = "form-control input-lg" })

                                <p class="text-danger">@Html.ValidationMessageFor(a => a.username)</p>
                            </div>
                        </div>

                                        <div class="form-group m-b-25">
                                            <div class="col-12">
                                                @Html.LabelFor(a => a.password)
                                                @Html.PasswordFor(a => a.password, new { @Class = "form-control input-lg" })

                                                <p class="text-danger">@Html.ValidationMessageFor(a => a.password)</p>
                                            </div>
                                        </div>
                                                        <div class="form-group m-b-20">
                                                            <div class="col-12">
                                                                <div class="checkbox checkbox-custom">
                                                                    <label>
                                                                        @Html.CheckBoxFor(a => a.remember_me)
                                                                        Remember me
                                                                    </label>
                                                                </div>
                                                            </div>
                                                        </div>
                                                                        <div class="form-group account-btn m-t-10">
                                                                            <div class="col-12">
                                                                                <button class="btn w-lg btn-rounded btn-lg btn-primary waves-effect waves-light" style=" background-color:#e66f00;border:#e66f00;" type="submit">Sign In</button>
                                                                            </div>
                                                                        </div>}
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                            <!-- end card-box-->
                        </div>
                        <!-- end wrapper -->
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- App js -->
    <script src="~/adminside/js/jquery.min.js"></script>
    <script src="~/adminside/js/bootstrap.min.js"></script>
    <script src="~/adminside/js/jquery.slimscroll.js"></script>
</body>
</html>




