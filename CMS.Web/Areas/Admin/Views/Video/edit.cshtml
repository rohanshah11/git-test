@model CMS.Core.Dto.VideoDto

@{
    ViewData["Title"] = "Update Video";
}
<div class="page-breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="/admin">Home</a>
        </li>
        <li>
            Update Video
        </li>
    </ul>
</div>
<div class="page-body">
    <div class="row">
        <div class="col-lg-12 col-sm-12 col-xs-12">
            <div class="row">
                <div class="col-lg-6 col-sm-6 col-xs-12">
                    <div class="widget radius-bordered">
                        <div class="widget-header">
                            <span class="widget-caption">UPDATE VIDEO</span>
                        </div>
                        <div class="widget-body">
                            <form class="form-horizontal" method="post"  action="/admin/video/edit">

                                @Html.ValidationSummary(true)

                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(a =>a.video_id)
                                <div class="form-group row">
                                    @Html.LabelFor(a => a.title, new { @class = "col-md-3 control-label asterik" })

                                    <div class="col-md-9">
                                        @Html.TextBoxFor(a => a.title, new { @class = "form-control" })

                                    </div>

                                    <p class="text-danger">@Html.ValidationMessageFor(a => a.title)</p>
                                </div>
                                <div class="form-group row">
                                    @Html.LabelFor(a => a.video_url, new { @class = "col-md-3 control-label asterik" })

                                    <div class="col-md-9">
                                        @Html.TextBoxFor(a => a.video_url, new { @class = "form-control" })

                                    </div>

                                    <p class="text-danger">@Html.ValidationMessageFor(a => a.video_url)</p>
                                </div>

                                <div class="form-group row">
                                    @Html.LabelFor(a => a.description, new { @class = "col-md-3 control-label" })

                                    <div class="col-md-9">
                                        @Html.TextAreaFor(a => a.description, new { @class = "form-control" })

                                    </div>

                                    <p class="text-danger">@Html.ValidationMessageFor(a => a.description)</p>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-12">
                                        <input class="btn btn-palegreen pull-right" type="submit" value="Update" style="background-color:#2dc3e8" />
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>


