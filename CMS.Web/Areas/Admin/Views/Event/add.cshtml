@model CMS.Web.Areas.Core.Models.EventModel;

@{
    ViewData["Title"] = "New Event";
}
<div class="page-breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="/admin">Home</a>
        </li>
        <li>
            Event
        </li>
    </ul>
</div>
<div class="page-body">
    <div class="row">
        <div class="col-lg-12 col-sm-12 col-xs-12">
            <div class="row">
                <div class="col-lg-10 col-sm-10 col-xs-10">
                    <div class="widget radius-bordered">
                        <div class="widget-header">
                            <span class="widget-caption">NEW EVENT</span>
                        </div>
                        <div class="widget-body">
                            <form class="form-horizontal" method="post" enctype="multipart/form-data">

                                @Html.ValidationSummary(true)

                                @Html.AntiForgeryToken()
                                <div class="form-group row">
                                    @Html.LabelFor(a => a.title, new { @class = "col-md-2 control-label asterik" })
                                    <div class="col-md-6">
                                        @Html.TextBoxFor(a => a.title, new { @class = "form-control" })
                                        <p class="text-danger">@Html.ValidationMessageFor(a => a.title)</p>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    @Html.LabelFor(a => a.event_from_date, new { @class = "col-md-2 control-label asterik" })
                                    <div class="col-md-6">
                                        @Html.TextBoxFor(a => a.event_from_date, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                                        <p class="text-danger">@Html.ValidationMessageFor(a => a.event_from_date)</p>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    @Html.LabelFor(a => a.event_to_date, new { @class = "col-md-2 control-label asterik" })
                                    <div class="col-md-6">
                                        @Html.TextBoxFor(a => a.event_to_date, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                                        <p class="text-danger">@Html.ValidationMessageFor(a => a.event_to_date)</p>
                                    </div>
                                </div>


                                <div class="form-group row">
                                    @Html.LabelFor(a => a.description, new { @class = "col-md-2 control-label asterik" })
                                    <div class="col-md-8">
                                        @Html.TextAreaFor(a => a.description, new { @class = "form-control", @rows = "15", @cols = "10" })
                                        <p class="text-danger">@Html.ValidationMessageFor(a => a.description)</p>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    @Html.LabelFor(a => a.venue, new { @class = "col-md-2 control-label asterik" })
                                    <div class="col-md-6">
                                        @Html.TextBoxFor(a => a.venue, new { @class = "form-control" })
                                        <p class="text-danger">@Html.ValidationMessageFor(a => a.venue)</p>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    @Html.LabelFor(a => a.time, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-6">
                                        @Html.TextBoxFor(a => a.time, new { @class = "form-control" })
                                        <p class="text-danger">@Html.ValidationMessageFor(a => a.time)</p>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    @Html.LabelFor(a => a.image_name, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-6">
                                        <input type="file" class="form-control" value="Choose File" name="file" id="file" />
                                        <p class="text-danger">@Html.ValidationMessageFor(a => a.image_name)</p>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    @Html.LabelFor(a => a.file_name, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-6">
                                        <input type="file" value="Choose File" class="form-control" name="form" id="file_name" />
                                        <p class="text-danger">@Html.ValidationMessageFor(a => a.file_name)</p>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-12">
                                        <input class="btn btn-palegreen pull-right" type="submit" value="Save" style="background-color:#2dc3e8" />
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-lg-2  images-list" id="previewImg">
                    <img id="image" class="image-preview" src="#" alt="" />
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .image-preview {
        height: 250px;
        width: 250px;
        float: right;
    }
</style>

@section scripts{
    <script>

        $("#file").change(function () {
            readURL(this);
        });
        function readURL(input) {

            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#image').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

    </script>
}

