@model CMS.Web.Areas.Admin.ViewModels.OrderDetailIndexViewModel;
@{
    ViewData["Title"] = "Order Details";
}

<div class="page-breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="/admin">Home</a>
        </li>
        <li class="active">Order Details</li>
    </ul>
</div>

<div class="page-body">
    <div class="row">
        <div class="col-xs-12 col-md-12">
            <div class="widget">
                <div class="row">
                    <div class="col-xs-12 col-md-12">
                        <div class="widget">
                            <div class="widget-header ">
                                <span class="widget-caption">VIEW ORDER DETAILS</span>
                                <div class="widget-buttons">
                                    <a href="tables-data.html#" data-toggle="maximize">
                                        <i class="fa fa-expand"></i>
                                    </a>
                                    <a href="tables-data.html#" data-toggle="collapse">
                                        <i class="fa fa-minus"></i>
                                    </a>
                                    <a href="tables-data.html#" data-toggle="dispose">
                                        <i class="fa fa-times"></i>
                                    </a>
                                </div>
                            </div>
                            <div class="widget-body">


                                <div class="table-toolbar">
                                    <form action="/admin/order-details" method="get" class="row col-sm-push">
                                    </form>
                                </div>
                                <table class="table table-striped table-hover table-bordered" id="editabledatatable">
                                    <thead>
                                        <tr role="row" id="productid">
                                            <th>#</th>
                                            <th>Image</th>
                                            <th>Menu Name</th>
                                            <th>Quantity</th>
                                            <th>Rate</th>
                                            <th>Total</th>


                                        </tr>
                                    </thead>
                                    <tbody>

                                        @{ var sn = 1; }
                                        @foreach (var order in Model.order_details1)
                                        {
                                            <tr class="ordertable">
                                                <td>@sn</td>
                                                <td><img src="~/images/custom/@order.menu.image_name" width="60" height="60" /></td>
                                                <td>@order.menu.name</td>
                                                <td>@order.quantity</td>
                                                <td>@order.rate</td>
                                                <td class="total_amount_single">@order.order.total_amount</td>

                                            </tr>

                                            sn++;
                                        }


                                    </tbody>
                                </table>

                                <ul class="list-group list-group-flush">
                                 
                                    <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                                        <div style="text-align:right;">
                                            <strong>The total amount is RS @Model.TotalAmount</strong>
                                         
                                        </div>
                                    </li>
                                </ul>
                            
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="~/css/Custom.css" rel="stylesheet" />
