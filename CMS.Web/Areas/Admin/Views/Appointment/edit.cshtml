@model CMS.Core.Dto.AppointmentDto
@{
    ViewData["Title"] = "Update Appointment";
}
<div class="page-breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="/admin">Home</a>
        </li>
        <li>
            Update Appointment
        </li>
    </ul>
</div>
<div class="page-body">
    <div class="row">
        <div class="col-lg-12 col-sm-12 col-xs-12">
            <div class="row">
                <div class="col-lg-6 col-sm-6 col-xs-12">
                    <div class="widget radius-bordered">
                        <div class="widget-header">
                            <span class="widget-caption">UPDATE News</span>
                        </div>
                        <div class="widget-body">
                            <form class="form-horizontal" method="post" enctype="multipart/form-data" action="/admin/appointment/edit">
                                @Html.ValidationSummary(true)

                                @Html.AntiForgeryToken()

                                @Html.HiddenFor(a => a.appointment_id)
                                <div class="form-group row">
                                    @Html.LabelFor(a => a.name, new { @class = "col-md-3 control-label asterik" })

                                    <div class="col-md-9">
                                        @Html.TextBoxFor(a => a.name, new { @class = "form-control" })

                                    </div>

                                    <p class="text-danger">@Html.ValidationMessageFor(a => a.name)</p>
                                </div>
                                <div class="form-group row">
                                    @Html.LabelFor(a => a.address, new { @class = "col-md-3 control-label" })

                                    <div class="col-md-9">
                                        @Html.TextBoxFor(a => a.address, new { @class = "form-control" })

                                    </div>

                                    <p class="text-danger">@Html.ValidationMessageFor(a => a.address)</p>
                                </div>
                                <div class="form-group row">
                                    @Html.LabelFor(a => a.country, new { @class = "col-md-3 control-label asterik" })

                                    <div class="col-md-9">
                                        <select class="form-control" name="country" id="country">
                                            <option value="">Country...</option>
                                            <option value="977">Nepal</option>
                                            <option value="91">India</option>
                                            <option value="975">Bhutan</option>
                                            <option value="94">Srilanka</option>
                                        </select>
                                    </div>

                                    <p class="text-danger">@Html.ValidationMessageFor(a => a.country)</p>
                                </div>
                                <div class="form-group row">
                                    @Html.LabelFor(a => a.contact_no, new { @class = "col-md-3 control-label" })
                                    <div class="col-md-2">
                                        @Html.TextBoxFor(a => a.country, new { @class = "form-control", id = "phone" })
                                    </div>
                                    <div class="col-md-7 mr-10">
                                        @Html.TextBoxFor(a => a.contact_no, new { @class = "form-control" })


                                    </div>

                                    <p class="text-danger">@Html.ValidationMessageFor(a => a.contact_no)</p>
                                </div>



                                <div class="form-group row">
                                    @Html.LabelFor(a => a.email, new { @class = "col-md-3 control-label" })

                                    <div class="col-md-9">
                                        @Html.TextBoxFor(a => a.email, new { @class = "form-control" })

                                    </div>

                                    <p class="text-danger">@Html.ValidationMessageFor(a => a.email)</p>
                                </div>


                                <div class="form-group row">
                                    @Html.LabelFor(a => a.appointment_date, new { @class = "col-md-3 control-label asterik" })

                                    <div class="col-md-9">
                                        @Html.TextBoxFor(a => a.appointment_date, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                                    </div>

                                    <p class="text-danger">@Html.ValidationMessageFor(a => a.appointment_date)</p>
                                </div>


                                <div class="form-group row">
                                    @Html.LabelFor(a => a.description, new { @class = "col-md-3 control-label asterik" })

                                    <div class="col-md-9">
                                        @Html.TextAreaFor(a => a.description, new { @class = "form-control" })
                                    </div>

                                    <p class="text-danger">@Html.ValidationMessageFor(a => a.description)</p>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <input class="btn btn-palegreen pull-right" type="submit" value="Update" style="background-color:#2dc3e8" />
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

