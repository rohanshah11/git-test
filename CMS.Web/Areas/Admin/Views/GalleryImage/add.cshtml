@model CMS.Core.Dto.GalleryImageDto;
@{
    ViewData["Title"] = "Gallery Image";
}

<div class="page-breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="/admin">Home</a>
        </li>
        <li>
            Gallery Image
        </li>
    </ul>
</div>

<div class="page-body">
    <div class="row">
        <div class="col-lg-12 col-sm-12 col-xs-12">
            <div class="row">
                <div class="col-lg-8 col-sm-8 col-xs-8">
                    <div class="widget radius-bordered">
                        <div class="widget-header">
                            <span class="widget-caption">GALLERY IMAGE</span>
                        </div>
                        <div class="widget-body">
                            <form class="form-horizontal" method="post" action="/admin/gallery-image/new" enctype="multipart/form-data">

                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)
                                <div class="form-group row">
                                    @Html.LabelFor(a => a.title, "Image Name", new { @class = "col-md-3 control-label " })
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(a => a.title, new { @class = "form-control" })
                                        <p class="text-danger">@Html.ValidationMessageFor(a => a.title)</p>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    @Html.LabelFor(a => a.gallery_id, new { @class = "col-md-3 control-label asterik" })
                                    <div class="col-md-9">
                                        @Html.DropDownListFor(a => a.gallery_id, ViewBag.image as SelectList, new { @class = "form-control" })
                                        <p class="text-danger">@Html.ValidationMessageFor(a => a.gallery_id)</p>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    @Html.LabelFor(a => a.description, "Image Description", new { @class = "col-md-3 control-label" })
                                    <div class="col-md-9">
                                        @Html.TextAreaFor(a => a.description, new { @class = "form-control", @rows="8" })
                                        <p class="text-danger">@Html.ValidationMessageFor(a => a.description)</p>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    @Html.LabelFor(a => a.image_name, new { @class = "col-md-3 control-label asterik" })
                                    <div class="col-md-9">
                                        <input type="file" value="Choose File" class="form-control" name="file" id="file" />
                                        <p class="text-danger">@Html.ValidationMessageFor(a => a.image_name)</p>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-12">
                                        <input class="btn btn-palegreen pull-right  btn-lg " type="submit" value="Save" style="background-color:#2dc3e8" />
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-lg-2 col-lg-offset-2 images-list" id="previewImg">
                    <img id="image" class="image-preview" src="#" alt="" />
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .image-preview {
        height: 250px;
        width: 250px;
        float: right;
    }
</style>
