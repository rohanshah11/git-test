@model CMS.Web.Areas.Core.Models.MenuModel;
@{
    ViewData["Title"] = "Add Item";
}

<div class="page-breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="/admin">Home</a>
        </li>
        <li>
            <a href="#">Item</a>

</div>
<div class="page-body">
    <div class="row">
        <div class="col-lg-12 col-sm-12 col-xs-12">
            <div class="row">
                <div class="col-lg-10 col-sm-10 col-xs-10">
                    <div class="widget radius-bordered">
                        <div class="widget-header">
                            <span class="widget-caption">NEW Item</span>
                        </div>
                        <div class="widget-body">
                            <form class="form-horizontal" method="post" action="/admin/menu/new" enctype="multipart/form-data">

                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)
                                <div class="form-group row">
                                    @Html.LabelFor(a => a.name, "Item Name", new { @class = "col-md-2 control-label asterik" })

                                    <div class="col-md-6">
                                        @Html.TextBoxFor(a => a.name, new { @class = "form-control" })
                                        <p class="text-danger">@Html.ValidationMessageFor(a => a.name)</p>
                                    </div>
                                </div>

                                <div class=" form-group row">
                                    @Html.LabelFor(a => a.menu_category_id, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-6">
                                        @Html.DropDownList("menu_category_id", (SelectList)ViewBag.menuCategory, new { @class = "form-control" })
                                        <p class="text-danger">@Html.ValidationMessageFor(a => a.menu_category_id)</p>
                                    </div>

                                </div>
                                <div class="form-group row">
                                    @Html.LabelFor(a => a.menu_date, new { @class = "col-md-2 control-label asterik" })

                                    <div class="col-md-6">
                                        @Html.TextBoxFor(a => a.menu_date, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                                    </div>

                                    <p class="text-danger">@Html.ValidationMessageFor(a => a.menu_date)</p>
                                </div>
                                <div class="form-group row">
                                    @Html.LabelFor(a => a.description, new { @class = "col-md-2 control-label asterik" })
                                    <div class="col-md-8">
                                        @Html.TextAreaFor(a => a.description, new { @class = "form-control", @rows = "15", @cols = "10" })
                                        <p class="text-danger">@Html.ValidationMessageFor(a => a.description)</p>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    @Html.LabelFor(a => a.unit_price, new { @class = "col-md-2 control-label asterik" })

                                    <div class="col-md-6">
                                        @Html.TextBoxFor(a => a.unit_price, new { @class = "form-control" })
                                        <p class="text-danger">@Html.ValidationMessageFor(a => a.unit_price)</p>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    @Html.LabelFor(a => a.fake_price, new { @class = "col-md-2 control-label" })

                                    <div class="col-md-6">
                                        @Html.TextBoxFor(a => a.fake_price, new { @class = "form-control" })
                                        <p class="text-danger">@Html.ValidationMessageFor(a => a.fake_price)</p>
                                    </div>
                                </div>


                                <div class="form-group row">
                                    @Html.LabelFor(a => a.image_name, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-6">
                                        <input type="file" value="Choose Image" class="form-control input-md" name="file" id="image_name" />
                                        <p class="text-danger">@Html.ValidationMessageFor(a => a.image_name)</p>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-12">
                                        <input class="btn btn-palegreen pull-right" type="submit" value="Save" style="background-color:#2dc3e8" />
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-lg-2  images-list" id="previewImg">
                    <img id="image" class="image-preview" src="#" alt="" />
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .image-preview {
        height: 150px;
        width: 140px;
        float: right;
    }
</style>

@section scripts{
    <script>

        $("#image_name").change(function () {
            readURL(this);
        });
        function readURL(input) {

            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#image').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

    </script>
}
