@model GalleryImageIndexViewModel;
@{
    ViewData["Title"] = "Gallery Image";
}

<div class="page-breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="/admin">Home</a>
        </li>
        <li class="active">Gallery Image</li>
    </ul>
</div>

<div class="page-body">
    <div class="row">
        <div class="col-xs-12 col-md-12">
            <div class="widget">
                <div class="row">
                    <div class="col-xs-12 col-md-12">
                        <div class="widget">
                            <div class="widget-header ">
                                <span class="widget-caption">VIEW GALLERY  IMAGE</span>
                                <div class="widget-buttons">
                                    <a href="tables-data.html#" data-toggle="maximize">
                                        <i class="fa fa-expand"></i>
                                    </a>
                                    <a href="tables-data.html#" data-toggle="collapse">
                                        <i class="fa fa-minus"></i>
                                    </a>
                                    <a href="tables-data.html#" data-toggle="dispose">
                                        <i class="fa fa-times"></i>
                                    </a>
                                </div>
                            </div>
                            <div class="widget-body">


                                <div class="table-toolbar">
                                    <form action="/admin/gallery-image" method="get" class="row col-sm-push">

                                        <div class="col-sm-6">
                                            <a href="/admin/gallery-image/new" class="btn btn-icon waves-effect waves-light btn-success btn-sm"><i class="fa fa-plus"></i> Add image</a>
                                        </div>

                                    </form>
                                </div>
                                <table class="table table-striped table-hover table-bordered" id="editabledatatable">
                                    <thead>
                                        <tr role="row">
                                            <th>#</th>
                                            <th>Image Name</th>
                                            <th>Image</th>
                                            <th>Gallery Name</th>
                                            <th width="80px">Status</th>
                                            <th width="80px">Sets</th>
                                            <th width="100px">Slider Image</th>

                                            <th width="130px">Actions</th>

                                        </tr>
                                    </thead>
                                    <tbody>

                                        @{ var sn = 1;
                                            foreach (var gallery in Model.gellery_details)
                                            {
                                                <tr>
                                                    <td>@sn</td>
                                                    <td>@gallery.title</td>
                                                    <td><img src="~/images/custom/@gallery.image_name" width="60" height="60" /></td>
                                                    <td>@gallery.gallery.name</td>
                                                    <td>
                                                        @{
                                                            if (gallery.is_enabled)
                                                            {
                                                                <label class="badge badge-success">Enabled</label>

                                                            }
                                                            else
                                                            {
                                                                <label class="badge badge-danger">Disabled</label>

                                                            }

                                                        }
                                                    </td>
                                                    <td>
                                                        @{
                                                            if (gallery.is_default)
                                                            {
                                                                <label class="badge badge-info">Default</label>

                                                            }
                                                            else
                                                            {
                                                                <label class="badge badge-gold">Custom</label>

                                                            }

                                                        }
                                                    </td>
                                                    <td>
                                                        @{
                                                            if (gallery.is_slider_image == true)
                                                            {
                                                                <span class="badge badge-success"><i class="fa fa-check fa-1x"></i></span>
                                                            }

                                                        }
                                                    </td>
                                                    <td>


                                                        <div class="btn-group">
                                                            <a class="btn btn-primary " href="javascript:void(0);">Actions</a>
                                                            <a class="btn btn-primary  dropdown-toggle" data-toggle="dropdown" href="javascript:void(0);" aria-expanded="false"><i class="fa fa-angle-down"></i></a>
                                                            <ul class="dropdown-menu dropdown-primary">
                                                                <li>
                                                                    <a href="/admin/gallery-image/edit/@gallery.gallery_image_id">Edit</a>
                                                                </li>
                                                                <li>
                                                                    <a href="/admin/gallery-image/delete/@gallery.gallery_image_id">Delete</a>
                                                                </li>
                                                                <li class="divider"></li>
                                                                <li>
                                                                    @{
                                                                        if (gallery.is_slider_image)
                                                                        {
                                                                            <a href="/admin/gallery-image/unmake-slider/@gallery.gallery_image_id">Deactivate Slider</a>
                                                                        }
                                                                        else
                                                                        {
                                                                            <a href="/admin/gallery-image/make-slider/@gallery.gallery_image_id">Activate Slider</a>
                                                                        }
                                                                    }
                                                                </li>

                                                                <li>
                                                                    @{
                                                                        if (gallery.is_enabled)
                                                                        {
                                                                            <a href="/admin/gallery-image/disable/@gallery.gallery_image_id">Disable Image</a>
                                                                        }
                                                                        else
                                                                        {
                                                                            <a href="/admin/gallery-image/enable/@gallery.gallery_image_id">Enable Image</a>

                                                                        }
                                                                    }

                                                                </li>
                                                                <li>
                                                                    @{
                                                                        if (gallery.is_default == false)
                                                                        {
                                                                            <a href="/admin/gallery-image/defaults/@gallery.gallery_image_id">Make Default</a>

                                                                        }
                                                                        else
                                                                        {
                                                                            <a href="/admin/gallery-image/customs/@gallery.gallery_image_id">Unmake Default</a>


                                                                        }
                                                                    }
                                                                </li>
                                                            </ul>
                                                        </div>

                                                    </td>
                                                </tr>
                                                sn++;
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="~/css/Custom.css" rel="stylesheet" />