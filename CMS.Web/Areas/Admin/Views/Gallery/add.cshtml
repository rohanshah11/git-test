@model CMS.Web.Areas.Core.Models.GalleryModel;
@{
    ViewData["Title"] = "Gallery";
}

<div class="page-breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="/admin">Home</a>
        </li>
        <li>
            Gallery
        </li>
    </ul>
</div>

<div class="page-body">
    <div class="row">
        <div class="col-lg-12 col-sm-12 col-xs-12">
            <div class="row">
                <div class="col-lg-8 col-sm-8 col-xs-8">
                    <div class="widget radius-bordered">
                        <div class="widget-header">
                            <span class="widget-caption">GALLERY</span>
                        </div>
                        <div class="widget-body">
                            <form class="form-horizontal" method="post" action="/admin/gallery/new" enctype="multipart/form-data">

                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)
                                <div class="form-group row">
                                    @Html.LabelFor(a => a.name, "Gallery Name", new { @class = "col-md-3 control-label asterik" })

                                    <div class="col-md-9">
                                        @Html.TextBoxFor(a => a.name, new { @class = "form-control" })
                                        <p class="text-danger">@Html.ValidationMessageFor(a => a.name)</p>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    @Html.LabelFor(a => a.description, "Gallery Description", new { @class = "col-md-3 control-label" })
                                    <div class="col-md-9">
                                        @Html.TextAreaFor(a => a.description, new { @class = "form-control", @rows="8" })
                                        <p class="text-danger">@Html.ValidationMessageFor(a => a.description)</p>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-12">
                                        <input class="btn btn-palegreen pull-right btn-lg" type="submit" value="Save" style="background-color:#2dc3e8" />
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-lg-2 col-lg-offset-2  images-list" id="previewImg">
                    <img id="image" class="image-preview" src="#" alt="" />
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .image-preview {
        height: 150px;
        width: 140px;
        float: right;
    }
</style>
