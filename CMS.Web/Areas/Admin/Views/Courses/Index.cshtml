@model CourseIndexViewModel;
@{
    ViewData["Title"] = "Courses";

    var list = new List<SelectListItem>() {
new SelectListItem { Text = "10", Value = "10"},
new SelectListItem { Text = "20", Value = "20" },
new SelectListItem { Text = "30", Value = "30" },
new SelectListItem { Text = "40", Value = "40"},
new SelectListItem { Text = "50", Value = "50" }
};
}

<div class="page-breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="/admin">Home</a>
        </li>

        <li class="active">Courses</li>
    </ul>
</div>

<div class="page-body">
    <div class="row">
        <div class="col-xs-12 col-md-12">
            <div class="widget">
                <div class="row">
                    <div class="col-xs-12 col-md-12">
                        <div class="widget">
                            <div class="widget-header ">
                                <span class="widget-caption">VIEW Courses</span>
                                <div class="widget-buttons">
                                    <a href="tables-data.html#" data-toggle="maximize">
                                        <i class="fa fa-expand"></i>
                                    </a>
                                    <a href="tables-data.html#" data-toggle="collapse">
                                        <i class="fa fa-minus"></i>
                                    </a>
                                    <a href="tables-data.html#" data-toggle="dispose">
                                        <i class="fa fa-times"></i>
                                    </a>
                                </div>
                            </div>
                            <div class="widget-body">
                                <div class="widget-body">
                                    <a href="/admin/course/new" class="btn btn-icon waves-effect waves-light btn-success btn-sm"><i class="fa fa-plus"></i> Add Course</a>

                                    <div class="table-toolbar">
                                        <form action="/admin/course" method="get" class="row col-sm-push">

                                            <div class="col-sm-6">
                                                @Html.TextBox("title", "", new { @class = "form-control no-padding", placeholder = "Title" })
                                            </div>
                                            <div class="col-sm-3">
                                                @Html.DropDownList("number_of_rows", list, new { @class = "form-control pull-right" })
                                            </div>
                                            <div class="col-sm-3">
                                                <button type="submit" class="btn btn-primary waves-effect w-md waves-light" style="margin-left:5px;">Load <i class="fa fa-spinner "></i></button>
                                            </div>

                                        </form>
                                    </div>
                                    <table class="table table-striped table-hover table-bordered" id="editabledatatable">
                                        <thead>
                                            <tr role="row">
                                                <th>#</th>
                                                <th>Name</th>
                                                <th>Faculty</th>
                                                <th>Description</th>
                                                <th>Specification</th>
                                                <th>Features</th>
                                                <th>Status</th>
                                                <th>Image</th>
                                                <th>Actions</th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{
                                                var sn = 1;
                                                foreach (var product in Model.courses)
                                                {
                                                    <tr>
                                                        <td>@sn</td>
                                                        <td>@product.name</td>
                                                        <td>@product.faculty.name</td>
                                                        <td>@Html.Raw(product.description)</td>
                                                        <td>@Html.Raw(product.specification)</td>
                                                        <td>@Html.Raw(product.features)</td>
                                                        <td>
                                                            <p>
                                                                @{
                                                                    bool is_enabled_now = product.is_enabled;
                                                                    var status = is_enabled_now ? "Enabled" : "Disabled";
                                                                    <text>@status</text>
                                                                }
                                                            </p>
                                                        </td>
                                                        <td><img src="~/images/custom/@product.file_name" style="height:40px;width:50px;" /></td>
                                                        <td>
                                                            <div class="btn-group">
                                                                <a class="btn btn-primary " href="javascript:void(0);">Actions</a>
                                                                <a class="btn btn-primary  dropdown-toggle" data-toggle="dropdown" href="javascript:void(0);" aria-expanded="false"><i class="fa fa-angle-down"></i></a>
                                                                <ul class="dropdown-menu dropdown-primary">
                                                                    <li>
                                                                        <a href="/admin/course/edit/@product.course_id">Edit</a>
                                                                    </li>
                                                                    <li>
                                                                        <a href="/admin/course/delete/@product.course_id" class="delete">Delete</a>
                                                                    </li>
                                                                    <li>
                                                                        @{
                                                                            if (!is_enabled_now)
                                                                            {
                                                                                <a href="/admin/course/enable/@product.course_id">Enable</a>
                                                                            }
                                                                            else
                                                                            {
                                                                                <a href="/admin/course/disable/@product.course_id">Disable</a>
                                                                            }
                                                                        }
                                                                    </li>

                                                                </ul>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    sn++;
                                                }
                                            }
                                        </tbody>
                                    </table>
                                    <LeadingEdgePager info="@ViewBag.pagerInfo"></LeadingEdgePager>

                                </div>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="~/css/Custom.css" rel="stylesheet" />
@section scripts{
    <script>
        $('.delete').on('click', function () {
            if (!confirm("Are you sure to delete?")) {
                event.preventDefault();
            }
        });
    </script>
}
