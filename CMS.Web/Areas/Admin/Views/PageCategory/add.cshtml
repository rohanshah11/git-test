@model CMS.Web.Areas.Core.Models.PageCategoryModel;

@{
    ViewData["Title"] = "add";
}

<div class="page-breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="/admin">Home</a>
        </li>
        <li>
            <a href="form-validation.html#">Page Category</a>
        </li>
    </ul>
</div>

<div class="page-body">
    <div class="row">
        <div class="col-lg-12 col-sm-12 col-xs-12">
            <div class="row">
                <div class="col-lg-8 col-sm-8 col-xs-8">
                    <div class="widget radius-bordered">
                        <div class="widget-header">
                            <span class="widget-caption">NEW PAGE</span>
                        </div>
                        <div class="widget-body">
                            <form class="form-horizontal" method="post" action="/admin/page-category/new">

                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)
                                <div class="form-group row">
                                    @Html.LabelFor(a => a.name, new { @class = "col-md-3 control-label asterik " })

                                    <div class="col-md-9">
                                        @Html.TextBoxFor(a => a.name, new { @class = "form-control" })
                                        <p class="text-danger">@Html.ValidationMessageFor(a => a.name)</p>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-12">
                                        <input class="btn btn-palegreen pull-right btn-lg" type="submit" value="Save" style="background-color:#2dc3e8" />
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-lg-2 col-lg-offset-2  images-list" id="previewImg">
                    <img id="image" class="image-preview" src="#" alt="" />
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .image-preview {
        height: 150px;
        width: 140px;
        float: right;
    }
</style>

@section scripts{
    <script>

        $("#image_name").change(function () {
            readURL(this);
        });
        function readURL(input) {

            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#image').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

    </script>
}
