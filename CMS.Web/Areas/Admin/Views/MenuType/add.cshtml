@model CMS.Web.Areas.Core.Models.MenuTypeModel;
@{
    ViewData["Title"] = "Add Item Type";
}

<div class="page-breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="/admin">Home</a>
        </li>
        <li>
            <a href="#">Item Type</a>
</li>
        </ul>
</div>
<div class="page-body">
    <div class="row">
        <div class="col-lg-12 col-sm-12 col-xs-12">
            <div class="row">
                <div class="col-lg-8 col-sm-8 col-xs-8">
                    <div class="widget radius-bordered">
                        <div class="widget-header">
                            <span class="widget-caption">NEW ITEM TYPE</span>
                        </div>
                        <div class="widget-body">
                            <form class="form-horizontal" method="post" action="/admin/menu-type/new" enctype="multipart/form-data">

                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)

                                @{
                                    List<SelectListItem> listItems = new List<SelectListItem>();
                                    listItems.Add(new SelectListItem
                                    {
                                        Text = "Breakfast",
                                        Value = "breakfast"
                                    });
                                    listItems.Add(new SelectListItem
                                    {
                                        Text = "Dessert",
                                        Value = "dessert",
                                        
                                    });
                                    listItems.Add(new SelectListItem
                                    {
                                        Text = "Dinner",
                                        Value = "dinner"
                                    });
                                    listItems.Add(new SelectListItem
                                    {
                                        Text = "Freshfood",
                                        Value = "freshfood"
                                    });
                                    listItems.Add(new SelectListItem
                                    {
                                        Text = "Lunch",
                                        Value = "lunch"
                                    });
                                }

                               
                                <div class="form-group row">

                                  
                                    @Html.LabelFor(a => a.name, "Name", new { @class = "col-md-2 control-label asterik" })

                                    <div class="col-md-6">
                                        @Html.DropDownListFor(model => model.name, listItems, "-- Select Item Item --", new { @class = "form-control" })
                                        <p class="text-danger">@Html.ValidationMessageFor(a => a.name)</p>
                                    </div>
                                </div>

                                <div class=" form-group row">
                                    @Html.LabelFor(a => a.menu_category_id, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-6">
                                        @Html.DropDownList("menu_category_id", (SelectList)ViewBag.categories, new { @class = "form-control" })
                                        <p class="text-danger">@Html.ValidationMessageFor(a => a.menu_category_id)</p>
                                    </div>


                                </div>



                                <div class="form-group">
                                    <div class="col-md-12">
                                        <input class="btn btn-palegreen pull-right" type="submit" value="Save" style="background-color:#2dc3e8" />
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                </div>
            </div>
        </div>
    </div>

