@model CMS.User.Dto.UpdatePasswordDto
@{
    ViewData["Title"] = "Change Password";
}

<div class="page-breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="/admin">Home</a>
        </li>
        <li>
         Update Password
        </li>
    </ul>
</div>

<div class="page-body">
    <div class="row">
        <div class="col-lg-12 col-sm-12 col-xs-12">
            <div class="row">
                <div class="col-lg-6 col-sm-6 col-xs-12">
                    <div class="widget radius-bordered">
                        <div class="widget-header">
                            <span class="widget-caption">UPDATES PASSWORD OF A USERS.</span>
                        </div>
                        <div class="widget-body">
                            <form class="form-horizontal" method="post" action="/user-management/user/change-password">

                                @Html.ValidationSummary(true)

                                @Html.AntiForgeryToken()

                                @Html.HiddenFor(a => a.type_id)

                                @Html.HiddenFor(a => a.type)
                                <div class="form-group row">
                                    @Html.LabelFor(a => a.old_password, new { @class = "col-md-3 control-label" })

                                    <div class="col-md-9">
                                        @Html.PasswordFor(a => a.old_password, new { @class = "form-control" })

                                    </div>

                                    <p class="text-danger">@Html.ValidationMessageFor(a => a.old_password)</p>
                                </div>

                                <div class="form-group row">
                                    @Html.LabelFor(a => a.new_password, new { @class = "col-md-3 control-label" })

                                    <div class="col-md-9">
                                        @Html.PasswordFor(a => a.new_password, new { @class = "form-control" })
                                    </div>

                                    <p class="text-danger">@Html.ValidationMessageFor(a => a.new_password)</p>
                                </div>

                                <div class="form-group row">
                                    @Html.LabelFor(a => a.confirm_password, new { @class = "col-md-3 control-label" })

                                    <div class="col-md-9">
                                        @Html.PasswordFor(a => a.confirm_password, new { @class = "form-control" })

                                    </div>

                                    <p class="text-danger">@Html.ValidationMessageFor(a => a.confirm_password)</p>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <input class="btn btn-palegreen pull-right" type="submit" value="Save" style="background-color:#2dc3e8" />
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>