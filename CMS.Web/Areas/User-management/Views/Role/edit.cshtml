@model RoleModel
@{
    ViewData["Title"] = "Edit Role";
}
<div class="page-breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="/admin">Home</a>
        </li>
        <li>
            Update Role
        </li>
    </ul>
</div>
<div class="page-body">
    <div class="row">
        <div class="col-lg-12 col-sm-12 col-xs-12">
            <div class="row">
                <div class="col-lg-6 col-sm-6 col-xs-12">
                    <div class="widget radius-bordered">
                        <div class="widget-header">
                            <span class="widget-caption">UPDATE ROLE</span>
                        </div>
                        <div class="widget-body">
                            <form class="form-horizontal" asp-area="user-management" asp-action="edit" asp-controller="role" method="post">

                                @Html.ValidationSummary(true)
                                @Html.AntiForgeryToken()

                                @Html.HiddenFor(a => a.role_id)
                                <div class="form-group row">
                                    @Html.LabelFor(a => a.name, "Role Name", new { @class = "col-md-3 control-label" })

                                    <div class="col-md-9">
                                        @Html.TextBoxFor(a => a.name, new { @class = "form-control" })

                                    </div>

                                    <p class="text-danger">  @Html.ValidationMessageFor(a => a.name)</p>
                                </div>

                                <div class="form-group row">
                                    @Html.LabelFor(a => a.name, "Status", new { @class = "col-md-3 control-label" })
                                    <div class="col-md-9">
                                        <label>
                                            @Html.RadioButtonFor(a => a.is_enabled, true, new { @class = "col-md-3 control-label" })&nbsp;&nbsp; Active  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                            <span class="text"> </span>
                                        </label>
                                        <label>
                                            @Html.RadioButtonFor(a => a.is_enabled, false, new { @class = "col-md-3 control-label" })&nbsp;&nbsp; Inactive
                                            <span class="text"> </span>
                                        </label>
                                    </div>
                                    <p class="text-danger">@Html.ValidationMessageFor(a => a.is_enabled)</p>
                                </div>

                                <div class="form-group row">
                                    @Html.LabelFor(a => a.permission_datas, "Permissions", new { @class = "col-md-3 control-label" })
                                    <div class="col-md-9">
                                        @{
                                            int i = 0;
                                            foreach (var permission in Model.permission_datas)
                                            {
                                                <label>
                                                    @Html.CheckBox("permission[" + i + "].is_checked", permission.is_checked)<text>&nbsp;&nbsp;&nbsp;<input name="permission[@i].permission_name" value="@permission.permission_name" type="hidden" />@permission.permission_name </text>
                                                    <span class="text"></span>

                                                </label>
                                                <br />
                                                i++;
                                            }
                                        }

                                    </div>

                                    <p class="text-danger">@Html.ValidationMessageFor(a => a.permission_datas)</p>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <input class="btn btn-palegreen pull-right" type="submit" value="Update" style="background-color:#2dc3e8" />
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
